#include <iostream>
using namespace std;

class Fahrenheit; 

class Celsius {
private:
    double temp;
public:
    Celsius(double t = 0) : temp(t) {}
    operator Fahrenheit(); 
    bool operator==(const Celsius& other) { return temp == other.temp; }
    void display() const { cout << temp << " 째C" << endl; }
};

class Fahrenheit {
private:
    double temp;
public:
    Fahrenheit(double t = 0) : temp(t) {}
    operator Celsius(); 
    bool operator==(const Fahrenheit& other) { return temp == other.temp; }
    void display() const { cout << temp << " 째F" << endl; }
};

Celsius::operator Fahrenheit() { return Fahrenheit((temp * 9 / 5) + 32); }

Fahrenheit::operator Celsius() { return Celsius((temp - 32) * 5 / 9); }

int main() {
    
    Celsius c1(25);
    Fahrenheit f1 = c1;  
    c1.display(); 
    f1.display(); 

    if (c1 == Celsius(25)) cout << "c1 is 25째C." << endl;
    if (f1 == Fahrenheit(77)) cout << "f1 is 77째F." << endl;

